                    // 重覆值也一起移除（以防萬一）
                    do {
                        let index = arr.findIndex(el => el === id);

                        if (index <= -1)
                            return;

                        arr.splice(index, 1);
                    } while (true);
                }

                // 超過不給再勾選
                if (arr.length >= quantity) {
                    e.target.checked = false;
                    return;
