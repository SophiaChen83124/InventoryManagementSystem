<script>
    var addItem = new Vue({
        el: '#addItem',
        data: {
            equips: {},
            category: {},
            items: {},
            selectCateId: '',
            selectEquipId: '',
            selectEquipSn: '',
            selectEquipName:'',
            addItemSN: "",
            addItemDiscrip: "",
            addNewCateName: "",
            equipCategoryId: "",
            addEquipName: "",
            addEquipSN: "",
            addEquipBrand: "",
            addEquipModel: "",
            addEquipPrice: 0,
            addEquipDiscrip: "",
            deletItems: [],
            indexofSelectEquip: '',
            selectEquipName: '',
            selectEquipSn: '',
            delectItemId:''
        },

        beforeCreate: function () {
            fetch('/EquipCategoryApi/GetCates', { method: 'GET' })
                .then(response => {
                    if (response.ok) {
                        return response.json();
                    }
                })
                .then(response => {
                    this.category = response;
                });

        },
        methods: {
            onCategoryChange: function (data) {
                this.selectCateId = data.target.value;
                addNewEquip.tempSelectCate = this.selectCateId

                fetch('/equipapi/GetEquipByCateId/' + data.target.value, { method: 'GET' })
                    .then(response => {
                        if (response.ok) {
                            return response.json();
                        }
                    })
                    .then(response => {
                        this.equips = response;

                    })  

            },

            onEquipNameChange: function (data) {
                console.log(this.selectEquipId);
                console.log(data.target.value);
                this.getdata();
            },

            addNewItem: function () {
                let requestData = {
                    adminId: 1,
                    equipmentId: this.selectEquipId,
                    itemSn: this.addItemSN,
                    description: this.addItemDiscrip

                };
                
                let url = "/ItemApi/InsertItem";
                let request = {
                    body: JSON.stringify(requestData),
                    method: "POST",
                    headers: {
                        "content-type": "application/json"
                    }
                };
                fetch(url, request)
                    .then(r => {
                        if (r.ok) {
                            alert("新增成功");
                            this.indexofSelectEquip = this.equips.findIndex(x => x.equipmentId === this.selectEquipId);
                            this.selectEquipName = this.equips[this.indexofSelectEquip].equipmentName;
                            this.selectEquipSn = this.equips[this.indexofSelectEquip].equipmentSn;
                            let updateData = {
                                equipmentName: this.selectEquipName,
                                equipmentSn: this.selectEquipSn,
                                itemSn: this.addItemSN,
                                description: this.addItemDiscrip
                            }
                            this.items.push(updateData);
                        } else {
                            alert("資料有誤");
                        }
                    })
                    .catch(error => {

                        alert("新增失敗");
                        console.log(error);
                    })



            },

            getdata: function () {
                fetch('/ItemApi/GetItemsByEquipId/' + this.selectEquipId, { method: 'GET' })
                    .then(response => {
                        if (response.ok) {
                            return response.json();
                        }
                    })
                    .then(response => {
                        this.items = response;

                    })



            },

            addNewCate: function () {
                console.log("按下按鈕");
                let url = "https://localhost:5001/EquipCategoryApi/InsertCate?Name=" + this.addNewCateName;
                let request = {
                    method: "POST"
                };

                fetch(url, request)
                    .then(r => {
                        if (r.ok) {
                            alert("新增成功");
                            location.reload(true);

                        }
                        else {
                            alert("資料有誤");
                        }
                    })
                    .catch(error => {
                        alert("新增失敗");
                    })
            },

            addNewEquip: function () {
                let requestData = {
                    equipmentCategoryId: this.equipCategoryId,
                    equipmentSn: this.addEquipSN,
                    equipmentName: this.addEquipName,
                    brand: this.addEquipBrand,
                    model: this.addEquipModel,
                    unitPrice: this.addEquipPrice,
                    description: this.addEquipDiscrip

                };
                let url = "/EquipApi/InsertEquip";
                let request = {
                    body: JSON.stringify(requestData),
                    method: "POST",
                    headers: {
                        "content-type": "application/json"
                    }
                }
                fetch(url, request)
                    .then(r => {
                        if (r.ok) {
                            alert("新增成功");
                            location.reload(true);

                        } else {
                            alert("資料有誤");
                        }
                    })
                    .catch(error => {

                        console.log(error);
                        alert("新增失敗");
                    })

            },

            btnDelItem: function (data) {
                this.delectItemId = data;
                this.deletItems.push(this.delectItemId);
                let url = '/ItemApi/RemoveItemsByIds/';
                let request = {
                    method: 'Delete',
                    headers: { 'content-type': 'application/json' },
                    body: JSON.stringify(this.deletItems)
                }
                fetch(url, request)
                    .then(response => {
                        return response.json();
                    })
                    .then(data => {
                        if (data === 0) {
                            alert("刪除失敗!!!");
                        } else {
                            alert("刪除" + data + "筆");

                            this.items=this.items.filter((x) => {
                                return x.itemId !== this.delectItemId;
                            });
                            
                            this.deletItems = [];
                            
                        }
                    })
            }

                

        }

    })





</script>
