<style>
    table {
        margin: 0 auto;
        height: 400px;
        width: 400px;
    }

    .title {
        text-align: center;
        font-size: 30px;
        background: #ececec;
    }

    table th {
        font-size: 20px;
        height: 60px;
    }

    .button {
        text-align: center;
    }
</style>

<div id="app">
    <table class="border">
        <tr>
            <th colspan="2" class="title">新增管理員</th>
        </tr>
        <tr>
            <th>角色ID：</th>
            <td>
                <select size="1" v-model="addRoleId">
                    <option disabled selected>請選擇權限</option>
                    <option v-for="role in roles" :value="role.roleId">{{role.roleName}}</option>
                </select>
            </td>
        </tr>
        <tr>
            <th>使用者名稱：</th>
            <td>
                <input type="text" v-model="addUserName" />
            </td>
        </tr>
        <tr>
            <th>密碼：</th>
            <td>
                <input type="text" v-model="addPassword" />
            </td>
        </tr>
        <tr>
            <th>全名：</th>
            <td>
                <input type="text" v-model="addFullName" />
            </td>
        </tr>
        <tr>
            <td colspan="2" class="button">
                <button type="button" class="btn btn-primary" v-on:click="addNewAdmin">新增</button>
            </td>
        </tr>
    </table>
</div>

<script>
    var app = new Vue({
        el: '#app',
        data: {
            roles: {},
            addRoleId: '',
            addUserName: '',
            addPassword: '',
            addFullName: ''
        },

        beforeCreate: function () {
            fetch('/api/role', { method: 'GET' })
                .then(response => {
                    return response.json();
                })
                .then(response => {
                    this.roles = response;
                    console.log(this.roles);
                })
                .catch(error => {
                    console.log(error);
                })
        },

        methods: {
            addNewAdmin: function () {
                let requestData = {
                    roleId: this.addRoleId,
                    username: this.addUserName,
                    password: this.addPassword,
                    fullName: this.addFullName
                }

                fetch('/api/admin', {
                    method: 'POST',
                    headers: { 'content-type': 'application/json' },
                    body: JSON.stringify(requestData)
                })
                    .then(response => {
                        if (response.ok) {
                            alert('新增成功');
                            location.href = 'adminManage';
                        } else {
                            alert('資料有誤');
                        }
                    })
                    .catch(error => {
                        console.log(error);
                        alert('新增失敗');
                    })
            },

        },

    })
</script>